function select_directory(elem){
  var className = elem.className;
  clear_selected();
  elem.className = className + "Selected";
  $('#dir').val(elem.id);
  $('#selected_item').val(elem.id);
}

function select_file(elem) {
  var className = elem.className;
  clear_selected();
  elem.className = className + "Selected";
  $('#file').val(elem.id);
